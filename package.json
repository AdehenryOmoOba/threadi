{
  "name": "drizzle",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "migration:generate": "drizzle-kit generate:pg --schema=./db/schema.ts",
    "migration:push": "node -r esbuild-register db/migrate.ts",
    "migrate": "drizzle-kit generate:pg --schema=./db/schema.ts && node -r esbuild-register db/migrate.ts",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "bs": "pnpm migrate && next build && next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@types/node": "20.4.8",
    "@types/react": "18.2.18",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.14",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.27.2",
    "next": "13.4.12",
    "pg": "^8.11.2",
    "postcss": "8.4.27",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@types/pg": "^8.10.2",
    "drizzle-kit": "^0.19.12",
    "esbuild": "^0.18.18",
    "esbuild-register": "^3.4.2"
  }
}
